{
  "name": "CaydenJoy",
  "version": "0.0.1",
  "description": "A starter kit for building PWAs!",
  "main": "index.js",
  "scripts": {
    "dev-server": "vite --open",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "deploy": "npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "build": "tsc && vite build",
    "build-tablet": "tsc && cross-env VITE_DEV_MODE=true vite build",
    "build-tablet-apk": "tsc && cross-env VITE_DEV_MODE=true vite build && echo APK-ready build complete. All premium features unlocked.",
    "start": "npm run dev",
    "start-remote": "vite --host"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@shoelace-style/shoelace": "^2.18.0",
    "@thepassle/app-tools": "^0.9.12",
    "expo": "^54.0.30",
    "lit": "^3.2.1",
    "urlpattern-polyfill": "^10.0.0",
    "workbox-build": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "typescript": "^5.6.3",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  }
}
